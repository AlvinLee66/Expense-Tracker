<div class="container py-4">
  <div class="row">
    <div class="col-6 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">修改此筆支出</h5>
          <small class="text-muted form-text">＊為必填欄位</small>
          <hr>
          <form action="/records/{{ record._id }}?_method=PUT" method="POST">
            <div class="row mb-3 g-2">
              <label for="name" class="col-md-3">內容＊：</label>
              <input type="text" class="form-control" placeholder="例如：午餐吃麥當勞" name="name" id="name" style="width: 300px;" required value="{{record.name}}">
            </div>

            <div class="row mb-3 g-2">
              <label for="date" class="col-md-3">日期＊：</label>
              <input type="date" class="form-control" name="date" id="date" style="width: 300px;" required
              value="{{record.date}}">
            </div>

            <div class="row mb-3 g-2">
              <label for="amount" class="col-md-3">金額＊：</label>
              <input type="number" class="form-control" name="amount" id="amount" min="0" style="width: 300px;" required value="{{record.amount}}">
            </div>

            <div class="row mb-3 g-2">
              <label for="category" class="col-md-3">類別＊：</label>
              <select class="form-select" name="categoryId" id="categoryId"
                aria-label="Example select with button addon" style="width: 300px;" required>
                <option selected value="{{record.categoryId}}">{{category.name}}</option>
                {{#each categories}}
                <option value="{{this._id}}">{{this.name}}</option>
                {{/each}}
              </select>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-center">
              <button id="submitButton" class="btn btn-success" type="submit">儲存</button>
              <a class="btn btn-secondary" role="button" href="/">取消</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>